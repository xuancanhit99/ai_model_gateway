# App settings
APP_NAME='AI Model Gateway'
APP_VERSION=1.0.0
APP_DESCRIPTION='Gateway service for multiple AI models including Gemini, Grok, Cloud Vision, GigaChat, Perplexity Sonar, etc.'

# API settings
API_V1_STR=/api/v1
API_BASE_URL=http://ai_gateway_service:6161

# --- PostgreSQL settings ---
POSTGRES_DB=ai_gateway
POSTGRES_USER=ai_gateway
POSTGRES_PASSWORD=ai_gateway_change_me
DATABASE_URL=postgresql://ai_gateway:ai_gateway_change_me@postgres:5432/ai_gateway
DB_POOL_MIN_SIZE=1
DB_POOL_MAX_SIZE=10
DB_AUTO_MIGRATE=true

# 32-byte encryption key encoded in urlsafe base64.
# Generate by: python3 - <<'PY'
# import base64, os
# print(base64.urlsafe_b64encode(os.urandom(32)).decode())
# PY
APP_ENCRYPTION_KEY=

